<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- FoodBank Name -->
    <TextView
        android:id="@+id/tv_foodbank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="FoodBank Name"/>

    <!-- Address -->
    <TextView
        android:id="@+id/tv_foodbank_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: Street, City, State, Postal Code, Country"/>

    <!-- Phone Number -->
    <TextView
        android:id="@+id/tv_foodbank_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: (123) 456-7890"/>

    <!-- Email Address -->
    <TextView
        android:id="@+id/tv_foodbank_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: example@example.com"/>

    <!-- Operating Status -->
    <TextView
        android:id="@+id/tv_foodbank_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Open"/>

    <!-- Opening Hours -->
    <TextView
        android:id="@+id/tv_foodbank_open_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Hours: 9 AM - 5 PM"/>

    <!-- Capacity -->
    <TextView
        android:id="@+id/tv_foodbank_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity: 100 people"/>

    <!-- Distance to User -->
    <TextView
        android:id="@+id/tv_foodbank_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: 500 meters"/>

    <!-- Foundation Date -->
    <TextView
        android:id="@+id/tv_foodbank_foundation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Founded: January 1, 2000"/>

</LinearLayout>