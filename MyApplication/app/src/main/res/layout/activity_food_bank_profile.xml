<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="#d3d3d3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_arrow_back_24"></ImageView>

        <ImageView
            android:id="@+id/iv_subscribe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_bookmarks_24"></ImageView>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_ios_share_24"></ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/food_bank_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/food_bank_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="phonenumber"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="rating"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="email"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="location"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_postcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="postcode"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="state"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_postcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_open_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="opeon hours"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_capacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="capacity"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_open_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="distance"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_capacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/food_bank_foundation_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="foundation date"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <WebView
        android:id="@+id/wv_map"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/food_bank_foundation_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        ></WebView>


</androidx.constraintlayout.widget.ConstraintLayout>
